<!-- show-trainer-to-user.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trainer Profile</title>
    <link rel="stylesheet" href="css/show-trainer.ejs">
    <style>
        /* show-trainer.css */

body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

.container1 {
    max-width: 600px;
    margin: 50px auto;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
    border-radius: 8px;
}

h1 {
    text-align: center;
    color: #333;
}

.profile-container {
    align-items: center;
    justify-content: center;
}

.profile-image {
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-right: 20px;
    margin-left: 200px;
    width: 200px;
    height: 200px;
}

.details-container {
    max-width: 400px;
}

label {
    display: block;
    margin-top: 10px;
    color: #333;
}

input,
textarea {
    width: 100%;
    padding: 8px;
    margin-bottom: 15px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 4px;
}

a {
    display: inline-block;
    padding: 10px 15px;
    background-color: #ff4d00;
    color: #fff;
    text-decoration: none;
    margin-right: 10px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
}

a:hover {
    background-color: #333;
}
.container1 {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
}

.profile-container {
    display: flex;
    align-items: center;
}

.profile-image {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    margin-right: 20px;
}

.details-container {
    flex: 1;
}

h1 {
    text-align: center;
}

h2 {
    font-size: 1.2em;
    margin-bottom: 5px;
}

p {
    margin-bottom: 15px;
    line-height: 1.5;
}

a {
    display: block;
    margin-top: 20px;
    text-align: center;
    text-decoration: none;
    color: #090909;
}

a:hover {
    text-decoration: underline;
}


    </style>
</head>
<body>
    <div class="container1">
        <h1>Trainer Profile</h1>
        <div class="profile-container">
            <% if (trainer.profileImage1) { %>
                <img src="/trainerimg/<%= trainer.profileImage1 %>" alt="Trainer Photo" class="profile-image">
            <% } else { %>
                <!-- You can provide a default image if profileImage1 is not available -->
                <img  alt="Default Photo" class="profile-image">
            <% } %>
            <div class="details-container">
                <h2>Trainer Name:</h2>
                <p><%= trainer.trainerName %></p>
    
                <h2>Email:</h2>
                <p><%= trainer.trainerEmail %></p>
    
                <h2>Specialization:</h2>
                <p><%= trainer.trainerSpecialization %></p>
    
                <h2>Experience:</h2>
                <p><%= trainer.trainerExperience %></p>
    
                <h2>Certification:</h2>
                <p><%= trainer.trainerCertification %></p>
    
                <h2>Phone:</h2>
                <p><%= trainer.trainerPhone %></p>
    
                <h2>Location:</h2>
                <p><%= trainer.trainerLocation %></p>
    
                <h2>Availability:</h2>
                <p><%= trainer.trainerAvailability %></p>
    
                <h2>Rate:</h2>
                <p><%= trainer.trainerRate %></p>
    
                <h2>Description:</h2>
                <p><%= trainer.trainerDescription %></p>
    
                <!-- Add more headings and paragraphs for other details -->
    
                <a href="/trainer1">Back to All Trainers</a>
            </div>
        </div>
    </div>
    
</body>
</html>
