<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Gym Template">
    <meta name="keywords" content="Gym, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Gym | Template</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oswald:300,400,500,600,700&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="css/flaticon.css" type="text/css">
    <link rel="stylesheet" href="css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="css/barfiller.css" type="text/css">
    <link rel="stylesheet" href="css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="css/style.css" type="text/css">
    <link rel="stylesheet" href="css/calculator.css" type="text/css">
</head>

<body onload="display()">
  
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu Section Begin -->
    <%- include('header') %>

<section class="hero-section">
    <div class="hs-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="img/hero/hero-1.jpg" style="height: fit-content;">
            
        </div>
    </div>
</section>
<div class="calculator-container">

<div class="calculator-card">
    <h2>BMI Calculator</h2>
    <label for="weight">Weight (kg):</label>
    <input type="number" id="bmiWeight" required>

    <label for="height">Height (cm):</label>
    <input type="number" id="bmiHeight" required>

    <button onclick="calculateBMI()">Calculate BMI</button>
    <p id="bmiResult"></p>
</div>

<div class="calculator-card">
    <h2>BMR Calculator</h2>
    <label for="age">Age:</label>
    <input type="number" id="bmrAge" required>

    <label for="gender">Gender:</label>
    <select id="bmrGender" required>
        <option value="male">Male</option>
        <option value="female">Female</option>
    </select>

    <label for="weight">Weight (kg):</label>
    <input type="number" id="bmrWeight" required>

    <label for="height">Height (cm):</label>
    <input type="number" id="bmrHeight" required>

    <button onclick="calculateBMR()">Calculate BMR</button>
    <p id="bmrResult"></p>
</div>

<div class="calculator-card">
    <h2>Body Fat Percentage Calculator</h2>
    <label for="gender">Gender:</label>
    <select id="bodyFatGender" required>
        <option value="male">Male</option>
        <option value="female">Female</option>
    </select>

    <label for="waist">Waist Circumference (cm):</label>
    <input type="number" id="bodyFatWaist" required>

    <label for="neck">Neck Circumference (cm):</label>
    <input type="number" id="bodyFatNeck" required>

    <label for="height">Height (cm):</label>
    <input type="number" id="bodyFatHeight" required>

    <button onclick="calculateBodyFat()">Calculate Body Fat Percentage</button>
    <p id="bodyFatResult"></p>
</div>
<div class="calculator-card">
    <h2>Step and Calorie Calculator</h2>
    <label for="distance">Distance (in miles):</label>
    <input type="number" id="distance" placeholder="Enter distance" required>

    <button onclick="calculateStepsAndCalories()">Calculate Steps and Calories</button>

    <h3>Calculated Steps:</h3>
    <p id="calculated-steps">-</p>

    <h3>Calories Burned:</h3>
    <p id="calories-burned">-</p>
</div>

<div class="calculator-card">
    <h2>Basal Metabolic Rate (Harris-Benedict equation)</h2>
    <label for="age">Age:</label>
    <input type="number" id="bmrHbAge" required>

    <label for="gender">Gender:</label>
    <select id="bmrHbGender" required>
        <option value="male">Male</option>
        <option value="female">Female</option>
    </select>

    <label for="weight">Weight (kg):</label>
    <input type="number" id="bmrHbWeight" required>

    <label for="height">Height (cm):</label>
    <input type="number" id="bmrHbHeight" required>

    <button onclick="calculateBMRHb()">Calculate BMR (Harris-Benedict)</button>
    <p id="bmrHbResult"></p>
</div>

<div class="calculator-card">
    <h2>Water Intake Calculator</h2>
    <label for="weight">Weight (kg):</label>
    <input type="number" id="waterWeight" required>

    <button onclick="calculateWaterIntake()">Calculate Water Intake</button>
    <p id="waterResult"></p>
</div>

<div class="calculator-card">
    <h2>Ideal Weight Calculator</h2>
    <label for="height">Height (cm):</label>
    <input type="number" id="idealHeight" required>

    <button onclick="calculateIdealWeight()">Calculate Ideal Weight</button>
    <p id="idealResult"></p>
</div>
</div>
    <!-- Footer Section Begin -->
    <%- include('footer') %>

    <!-- Footer Section End -->

    <!-- Search model Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search model end -->

    <!-- Js Plugins -->
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/masonry.pkgd.min.js"></script>
    <script src="js/jquery.barfiller.js"></script>
    <script src="js/jquery.slicknav.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/main.js"></script>  
    <script>
        function calculateBMI() {
            const weight = document.getElementById('bmiWeight').value;
            const height = document.getElementById('bmiHeight').value;
            const bmi = (weight / ((height / 100) ** 2)).toFixed(2);
            document.getElementById('bmiResult').textContent = `Your BMI: ${bmi}`;
        }

        function calculateBMR() {
            const age = document.getElementById('bmrAge').value;
            const gender = document.getElementById('bmrGender').value;
            const weight = document.getElementById('bmrWeight').value;
            const height = document.getElementById('bmrHeight').value;
            let bmr;

            if (gender === 'male') {
                bmr = 88.362 + (13.397 * weight) + (4.799 * height) - (5.677 * age);
            } else {
                bmr = 447.593 + (9.247 * weight) + (3.098 * height) - (4.330 * age);
            }

            document.getElementById('bmrResult').textContent = `Your BMR: ${bmr.toFixed(2)} calories/day`;
        }

        function calculateBodyFat() {
            const gender = document.getElementById('bodyFatGender').value;
            const waist = document.getElementById('bodyFatWaist').value;
            const neck = document.getElementById('bodyFatNeck').value;
            const height = document.getElementById('bodyFatHeight').value;

            const bodyFatPercentage = calculateBodyFatPercentage(gender, waist, neck, height);
            document.getElementById('bodyFatResult').textContent = `Your Body Fat Percentage: ${bodyFatPercentage.toFixed(2)}%`;
        }

        function calculateBMRHb() {
            const age = document.getElementById('bmrHbAge').value;
            const gender = document.getElementById('bmrHbGender').value;
            const weight = document.getElementById('bmrHbWeight').value;
            const height = document.getElementById('bmrHbHeight').value;
            let bmr;

            if (gender === 'male') {
                bmr = 66.5 + (13.75 * weight) + (5.003 * height) - (6.75 * age);
            } else {
                bmr = 655.1 + (9.563 * weight) + (1.850 * height) - (4.676 * age);
            }

            document.getElementById('bmrHbResult').textContent = `Your BMR (Harris-Benedict): ${bmr.toFixed(2)} calories/day`;
        }

        function calculateWaterIntake() {
            const weight = document.getElementById('waterWeight').value;
            const waterIntake = weight * 0.033; // Assuming 33ml per kg
            document.getElementById('waterResult').textContent = `Your Daily Water Intake: ${waterIntake.toFixed(2)} liters`;
        }

        function calculateIdealWeight() {
            const height = document.getElementById('idealHeight').value;
            const idealWeight = (22.5 * (height / 100) ** 2).toFixed(2);
            document.getElementById('idealResult').textContent = `Your Ideal Weight: ${idealWeight} kg`;
        }

        function calculateBodyFatPercentage(gender, waist, neck, height) {
            const waistHipRatio = waist / height;
            const factor = gender === 'male' ? 0.29288 : 0.29669;
            const bodyFatPercentage = (495 / (1.0324 - 0.19077 * Math.log10(waist - neck) + 0.15456 * Math.log10(height)) - 450) * factor;
            return bodyFatPercentage;
        }
        function calculateStepsAndCalories() {
            const distanceInput = document.getElementById('distance');
            const calculatedStepsElement = document.getElementById('calculated-steps');
            const caloriesBurnedElement = document.getElementById('calories-burned');

            const distance = parseFloat(distanceInput.value);

            if (!isNaN(distance)) {
                // Assuming 2000 steps per mile and 100 calories burned per mile (adjust according to your needs)
                const steps = Math.round(distance * 2000);
                const caloriesBurned = Math.round(distance * 100);

                calculatedStepsElement.textContent = steps.toLocaleString();
                caloriesBurnedElement.textContent = caloriesBurned.toLocaleString();
            } else {
                calculatedStepsElement.textContent = 'Invalid input. Please enter a valid number.';
                caloriesBurnedElement.textContent = '';
            }
        }
    </script>
          
        <script>
function display()
{
    document.addEventListener('contextmenu',event=>event.preventDefault());
}
</script>
</body>

</html>
