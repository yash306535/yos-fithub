<script>
    function contactUser(email) {
        // Implement your logic to handle contacting the user
        alert('Contacting user with email: ' + email);
    }
    function addProgress1() {
            // Add logic to handle adding progress for the plan
            window.location.href = '/user-progress';        }
</script>
</body>

</html>
