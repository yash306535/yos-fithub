    document.addEventListener('contextmenu',event=>event.preventDefault());
    
    // Access the username element by its ID
   var usernameElement = document.getElementById('username');

    // Set the inner HTML of the username element
    usernameElement.innerHTML = 'yash';

    // Retrieve and log the updated text
    var updatedUsername = usernameElement.innerHTML;
    console.log('Username:', updatedUsername);
}


 const currentPort = window.location.port;
        
        if (currentPort !== '4000') {
            // Hide the element if the port is not 4000
            const logElement = document.getElementById('log');
            logElement.style.display = 'none';
        }
